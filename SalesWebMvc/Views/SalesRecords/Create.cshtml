@using SalesWebMvc.Models.Enums
@model SalesWebMvc.Models.ViewModels.SalesRecordFormViewModel;

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<h5>Sales Record</h5>

<hr />
<div class="row">
    <div class="col-md-3">
        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="SalesRecord.Date" class="control-label"></label>
                <input asp-for="SalesRecord.Date" class="form-control" />
                <span asp-validation-for="SalesRecord.Date" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SalesRecord.Amount" class="control-label"></label>
                <input asp-for="SalesRecord.Amount" class="form-control" />
                <span asp-validation-for="SalesRecord.Amount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SalesRecord.Status" class="control-label"></label>
                <select asp-for="SalesRecord.Status" class="form-select" asp-items="@Model.StatusList"> </select> <!--asp-items recebe somente IEnumerable<SelectListItem> ou SelectList-->
                <span asp-validation-for="SalesRecord.Status" class="text-danger"></span>
            </div>
            <div class="mb-5">
                <label asp-for="SalesRecord.SellerId" class="control-label"></label>
                <select asp-for="SalesRecord.SellerId" class="form-select" asp-items="@(new SelectList(Model.SellersList, "Id", "Name"))"> </select>
            </div>
            <div class="mb-5">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
